<main class="container">
  <h1>reserved tables</h1>
  <ul class='reservations'>
    <% @tables.each do |table| %>
      <li>
        <p>Name: <%= table.name %></p>
        <p>Description: <%= table.description %></p>
        <% @reservations.where(table_id: table.id).each do |reservation| %>
        <p class='reserved-for'>Reserved for: <%= reservation.reserved_for %></p>
      <% end %>
      </li>
    <% end %>
  </ul>
</main>
