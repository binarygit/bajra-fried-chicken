<% unless resource.errors.empty? %>
  <section class='errors'>
    <h2>Error Messages</h2>
    <ul>
      <% resource.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </section>
<% end %>

<%= form_with model: resource, class: "form-container", data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset" } do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>

