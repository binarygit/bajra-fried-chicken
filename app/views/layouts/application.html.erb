<!DOCTYPE html>
<html>
  <head>
    <title>Bfc</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, class: name == 'alert' ? 'flash alert' : 'flash notice' %>
    <% end %>

    <% if logged_in? %>
      <nav>
        <ul>
          <li><%= link_to 'Menu', foods_path %></li>
          <li><%= link_to 'Tables', tables_path %></li>
          <li><%= link_to 'My Orders', bills_path %></li>
          <li><%= link_to 'My reservations', reservations_path %></li>
          <li><%= link_to 'Logout', logout_path %></li>
        </ul>
      </nav>
    <% end %>

    <%= yield %>
  </body>
</html>
