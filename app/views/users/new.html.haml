%main.container.center
  - unless @user.errors.empty?
    %section.errors
      %h2 Error Messages
      %ul
        - @user.errors.full_messages.each do |error|
          %li= error
  = form_with model: @user, class: 'form-container' do |f|
    %div
      = f.label :username
      = f.text_field :username, placeholder: 'Mr. A'
    %div
      = f.label :email
      = f.email_field :email, placeholder: 'wannabebajraian@bajra.com'
    %div
      = f.label :password
      = f.password_field :password
    %div
      = f.label 'password confirmation'
      = f.password_field :password_confirmation
    %div
      = f.submit
