<div class="container center">
  <%= form_with model: @user, class: 'form-container' do |f| %>
    <div>
      <%= f.label :username %>
      <%= f.text_field :username, placeholder: 'Mr. A' %>
    </div>

    <div>
      <%= f.label :email %>
      <%= f.text_field :email, placeholder: 'wannabebajraian@bajra.com' %>
    </div>

    <div>
      <%= f.label :password %>
      <%= f.text_field :password %>
    </div>

    <div>
      <%= f.label 'password confirmation' %>
      <%= f.text_field :password_confirmation %>
    </div>

    <div>
      <%= f.submit %>
    </div>
  <% end %>
</div>
